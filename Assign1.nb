f[x_] := E^(-x^2)

x0 = 0;

P1[x_] = Normal[Series[f[x], {x, x0, 1}]]

P5[x_] = Normal[Series[f[x], {x, x0, 5}]]

P10[x_] = Normal[Series[f[x], {x, x0, 10}]]

Plot[{f[x], P1[x], P5[x], P10[x]}, {x, -5, 5}, PlotRange -> {0, 1.2}, 
 PlotLegends -> "Expressions"]
 
 
 
 
 
 
 
 
 
 
